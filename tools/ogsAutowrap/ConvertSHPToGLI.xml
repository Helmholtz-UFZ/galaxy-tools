<tool name="OGS: ConvertSHPToGLI" id="ogs_convertshptogli" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'ConvertSHPToGLI'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[ConvertSHPToGLI --version]]></version_command>
  <command><![CDATA[if [ "$shape_file" != "None" ] && [ ! -e '${$shape_file.element_identifier}' ]; then ln -s '$shape_file' '${$shape_file.element_identifier}'; fi;
ConvertSHPToGLI
    --shape-file '$shape_file.element_identifier']]></command>
  <inputs>
    <param name="shape_file" type="data" optional="false" label="shape file" help="Input (.shp). the input shape file" format="data" multiple="false"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="convertshptogli_test"/>
  </tests>
  <help><![CDATA[This tool runs the **ConvertSHPToGLI** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
