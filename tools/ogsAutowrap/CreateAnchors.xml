<tool name="OGS: CreateAnchors" id="ogs_createanchors" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'CreateAnchors'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[CreateAnchors --version]]></version_command>
  <command><![CDATA[CreateAnchors
    --input '$input'
    --output '$output'
    --json-file '$json_file'
    #if str($tolerance):
        --tolerance '$tolerance'
    #end if
    #if str($max_iter):
        --max-iter '$max_iter'
    #end if]]></command>
  <inputs>
    <param name="input" type="data" optional="false" label="input" help="Input bulk mesh" format="data" multiple="false"/>
    <param name="output" type="text" optional="false" label="output" help="Anchor mesh"/>
    <param name="json_file" type="text" optional="false" label="json file" help="JSON file containing anchor start and end points"/>
    <param name="tolerance" type="float" value="2.220446049250313e-16" optional="true" label="tolerance" help="Tolerance/Search length"/>
    <param name="max_iter" type="text" value="5" optional="true" label="max iter" help="maximum number of iterations of the internal root-finding algorithm"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="createanchors_test"/>
  </tests>
  <help><![CDATA[This tool runs the **CreateAnchors** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
