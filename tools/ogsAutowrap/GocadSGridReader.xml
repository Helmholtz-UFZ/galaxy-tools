<tool name="OGS: GocadSGridReader" id="ogs_gocadsgridreader" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'GocadSGridReader'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[GocadSGridReader --version]]></version_command>
  <command><![CDATA[GocadSGridReader
    $generate_face_sets
    --output-mesh '$output_mesh'
    --sg '$sg']]></command>
  <inputs>
    <param name="generate_face_sets" type="boolean" label="generate face sets" help="Generate face sets." checked="false" truevalue="--generate-face-sets" falsevalue=""/>
    <param name="output_mesh" type="text" optional="false" label="output mesh" help="vtk unstructured grid file name"/>
    <param name="sg" type="text" optional="false" label="sg" help="Gocad stratigraphic grid file name"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="gocadsgridreader_test"/>
  </tests>
  <help><![CDATA[This tool runs the **GocadSGridReader** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
