<tool name="OGS: Mesh2Raster" id="ogs_mesh2raster" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'Mesh2Raster'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[Mesh2Raster --version]]></version_command>
  <command><![CDATA[Mesh2Raster
    #if str($cellsize):
        --cellsize '$cellsize'
    #end if
    --output-file '$output_file'
    --input-file '$input_file']]></command>
  <inputs>
    <param name="cellsize" type="float" value="1" optional="true" label="cellsize" help="edge length of raster cells in result"/>
    <param name="output_file" type="text" optional="false" label="output file" help="Raster output file (*.asc)"/>
    <param name="input_file" type="text" optional="false" label="input file" help="Mesh input file (*.vtu, *.msh)"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="mesh2raster_test"/>
  </tests>
  <help><![CDATA[This tool runs the **Mesh2Raster** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
