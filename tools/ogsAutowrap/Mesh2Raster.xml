<tool name="OGS: Mesh2Raster" id="ogs_mesh2raster" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'Mesh2Raster'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[Mesh2Raster --version]]></version_command>
  <command><![CDATA[Mesh2Raster
    #if str($cellsize):
        --cellsize '$cellsize'
    #end if
    --input-file '$input_file'
    --output-file output_1.asc]]></command>
  <inputs>
    <param name="cellsize" type="float" value="1" optional="true" label="cellsize" help="edge length of raster cells in result. (min = 0)" min="0"/>
    <param name="input_file" type="data" optional="false" label="input file" help="Input (.vtu | .msh). Mesh input file" format="vtu,msh" multiple="false"/>
  </inputs>
  <outputs>
    <data name="output_Mesh2Raster" format="asc" label="Output file from Mesh2Raster" from_work_dir="output_1.asc" hidden="false"/>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **Mesh2Raster** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
