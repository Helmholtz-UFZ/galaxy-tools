<tool name="OGS: MoveGeometry" id="ogs_movegeometry" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'MoveGeometry'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[MoveGeometry --version]]></version_command>
  <command><![CDATA[MoveGeometry
    #if str($z):
        --z '$z'
    #end if
    #if str($y):
        --y '$y'
    #end if
    #if str($x):
        --x '$x'
    #end if
    --output '$output'
    --input '$input']]></command>
  <inputs>
    <param name="z" type="float" value="0.0" optional="true" label="z" help="displacement in z direction"/>
    <param name="y" type="float" value="0.0" optional="true" label="y" help="displacement in y direction"/>
    <param name="x" type="float" value="0.0" optional="true" label="x" help="displacement in x direction"/>
    <param name="output" type="text" optional="false" label="output" help="output geometry file (*.gml)"/>
    <param name="input" type="text" optional="false" label="input" help="input geometry file (*.gml)"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="movegeometry_test"/>
  </tests>
  <help><![CDATA[This tool runs the **MoveGeometry** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
