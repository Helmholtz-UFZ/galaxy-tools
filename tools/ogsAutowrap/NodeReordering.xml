<tool name="OGS: NodeReordering" id="ogs_nodereordering" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'NodeReordering'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[NodeReordering --version]]></version_command>
  <command><![CDATA[NodeReordering
    --method '$method'
    --output_mesh '$output_mesh'
    --input_mesh '$input_mesh']]></command>
  <inputs>
    <param name="method" type="select" label="method" help="reordering method selection">
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
    </param>
    <param name="output_mesh" type="text" optional="false" label="output mesh" help="the output mesh file"/>
    <param name="input_mesh" type="text" optional="false" label="input mesh" help="the input mesh file"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="nodereordering_test"/>
  </tests>
  <help><![CDATA[This tool runs the **NodeReordering** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
