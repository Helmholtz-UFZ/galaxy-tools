<tool name="OGS: NodeReordering" id="ogs_nodereordering" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'NodeReordering'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[NodeReordering --version]]></version_command>
  <command><![CDATA[for i in $input_mesh; do if [ "$i" != "None" ] && [ ! -e "$(basename $i)" ]; then ln -s "$i" "$(basename $i)"; fi; done;
NodeReordering
    --method '$method'
    --input_mesh '$input_mesh.element_identifier'
    --output_mesh output_1.vtu]]></command>
  <inputs>
    <param name="method" type="select" label="method" help="reordering method selection">
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
    </param>
    <param name="input_mesh" type="data" optional="false" label="input mesh" help="Input (.vtu | .vtk | .msh). the input mesh file" format="vtkxml" multiple="false"/>
  </inputs>
  <outputs>
    <data name="output_NodeReordering" format="vtkxml" label="Output file from NodeReordering" from_work_dir="output_1.vtu" hidden="false"/>
  </outputs>
  <tests>
    <expand macro="nodereordering_test"/>
  </tests>
  <help><![CDATA[This tool runs the **NodeReordering** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
