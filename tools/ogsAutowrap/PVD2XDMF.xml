<tool name="OGS: PVD2XDMF" id="ogs_pvd2xdmf" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'PVD2XDMF'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[PVD2XDMF --version]]></version_command>
  <command><![CDATA[PVD2XDMF
    #if str($output_directory):
        --output-directory '$output_directory'
    #end if
    '$pvd_file']]></command>
  <inputs>
    <param name="output_directory" type="text" value="." optional="true" label="output directory" help="the output directory to write to"/>
    <param name="pvd_file" type="text" optional="false" label="pvd file" help="pvd file"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="pvd2xdmf_test"/>
  </tests>
  <help><![CDATA[This tool runs the **PVD2XDMF** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
