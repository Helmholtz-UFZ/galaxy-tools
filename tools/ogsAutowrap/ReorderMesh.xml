<tool name="OGS: ReorderMesh" id="ogs_reordermesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'ReorderMesh'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[ReorderMesh --version]]></version_command>
  <command><![CDATA[ReorderMesh
    --input '$input'
    --output '$output']]></command>
  <inputs>
    <param name="input" type="text" optional="false" label="input" help="the input mesh file"/>
    <param name="output" type="text" optional="false" label="output" help="the output mesh file"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="reordermesh_test"/>
  </tests>
  <help><![CDATA[This tool runs the **ReorderMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
