<tool name="OGS: convertToLinearMesh" id="ogs_converttolinearmesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'convertToLinearMesh'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[convertToLinearMesh --version]]></version_command>
  <command><![CDATA[convertToLinearMesh
    --input-mesh-file '$input_mesh_file'
    --output-mesh-file '$output_mesh_file']]></command>
  <inputs>
    <param name="input_mesh_file" type="text" optional="false" label="input mesh file" help="input mesh file"/>
    <param name="output_mesh_file" type="text" optional="false" label="output mesh file" help="output mesh file"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="converttolinearmesh_test"/>
  </tests>
  <help><![CDATA[This tool runs the **convertToLinearMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
