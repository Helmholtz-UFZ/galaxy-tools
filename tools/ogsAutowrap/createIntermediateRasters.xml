<tool name="OGS: createIntermediateRasters" id="ogs_createintermediaterasters" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'createIntermediateRasters'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[createIntermediateRasters --version]]></version_command>
  <command><![CDATA[createIntermediateRasters
    #if str($number):
        --number '$number'
    #end if
    --file2 '$file2'
    --file1 '$file1'
    --output-file output_1.asc]]></command>
  <inputs>
    <param name="number" type="integer" value="1" optional="true" label="number" help="number of rasters to be calculated, (min = 0)" min="0"/>
    <param name="file2" type="data" optional="false" label="file2" help="Input (.asc). Second DEM-raster input file" format="asc" multiple="false"/>
    <param name="file1" type="data" optional="false" label="file1" help="Input (.asc) First DEM-raster input file" format="asc" multiple="false"/>
  </inputs>
  <outputs>
    <data name="output_createIntermediateRasters" format="asc" label="Output file from createIntermediateRasters" from_work_dir="output_1.asc" hidden="false"/>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **createIntermediateRasters** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
