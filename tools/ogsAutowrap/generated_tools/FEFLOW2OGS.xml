<tool name="OGS: FEFLOW2OGS" id="ogs_feflow2ogs" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'FEFLOW2OGS'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[FEFLOW2OGS --version]]></version_command>
  <command><![CDATA[FEFLOW2OGS
    #for $f in $in:
        --in '$f'
    #end for
    --out output_1.dat]]></command>
  <inputs>
    <param name="in" type="data" optional="false" label="in" help="FEFLOW input file (format = *.fem)" format="fem" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from FEFLOW2OGS">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **FEFLOW2OGS** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
