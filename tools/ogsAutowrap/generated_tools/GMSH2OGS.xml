<tool name="OGS: GMSH2OGS" id="ogs_gmsh2ogs" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'GMSH2OGS'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[GMSH2OGS --version]]></version_command>
  <command><![CDATA[GMSH2OGS
    #for $f in $in:
        --in '$f'
    #end for
    $validation
    $boundaries
    $exclude_lines
    --out output_1.msh]]></command>
  <inputs>
    <param name="in" type="data" optional="false" label="in" help="Input (.msh) file" format="msh" multiple="false"/>
    <param name="validation" type="boolean" label="validation" help="validate the mesh" checked="false" truevalue="--validation" falsevalue=""/>
    <param name="boundaries" type="boolean" label="boundaries" help="if set, boundary meshes will be generated" checked="false" truevalue="--boundaries" falsevalue=""/>
    <param name="exclude_lines" type="boolean" label="exclude lines" help="if set, lines will not be written to the ogs mesh" checked="false" truevalue="--exclude-lines" falsevalue=""/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from GMSH2OGS">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **GMSH2OGS** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
