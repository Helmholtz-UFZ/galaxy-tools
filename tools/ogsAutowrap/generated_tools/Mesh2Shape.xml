<tool name="OGS: Mesh2Shape" id="ogs_mesh2shape" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'Mesh2Shape'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[Mesh2Shape --version]]></version_command>
  <command><![CDATA[Mesh2Shape
    #for $f in $input_file:
        --input-file '$f'
    #end for
    --output-file output_1.shp]]></command>
  <inputs>
    <param name="input_file" type="data" optional="false" label="input file" help="OGS mesh file (format = *.vtu, *.msh)" format="vtu,msh" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from Mesh2Shape">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **Mesh2Shape** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
