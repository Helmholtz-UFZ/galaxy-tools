<tool name="OGS: MoveGeometry" id="ogs_movegeometry" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'MoveGeometry'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[MoveGeometry --version]]></version_command>
  <command><![CDATA[MoveGeometry
    --z '$z'
    --y '$y'
    --x '$x'
    #for $f in $input:
        --input '$f'
    #end for
    --output output_1.gml]]></command>
  <inputs>
    <param name="z" type="float" value="0.0" optional="false" label="z" help="displacement in z direction"/>
    <param name="y" type="float" value="0.0" optional="false" label="y" help="displacement in y direction"/>
    <param name="x" type="float" value="0.0" optional="false" label="x" help="displacement in x direction"/>
    <param name="input" type="data" optional="false" label="input" help="Input (.gml) geometry file" format="gml" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from MoveGeometry">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **MoveGeometry** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
