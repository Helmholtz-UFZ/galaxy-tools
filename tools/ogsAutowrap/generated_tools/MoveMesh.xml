<tool name="OGS: MoveMesh" id="ogs_movemesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'MoveMesh'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[MoveMesh --version]]></version_command>
  <command><![CDATA[MoveMesh
    #for $f in $mesh:
        --mesh '$f'
    #end for
    --x '$x'
    --y '$y'
    --z '$z'
    --output-mesh output_1.vtu]]></command>
  <inputs>
    <param name="mesh" type="data" optional="false" label="mesh" help="Input (.vtu) mesh file" format="vtu" multiple="false"/>
    <param name="x" type="float" value="0.0" optional="false" label="x" help="displacement in x direction"/>
    <param name="y" type="float" value="0.0" optional="false" label="y" help="displacement in y direction"/>
    <param name="z" type="float" value="0.0" optional="false" label="z" help="displacement in z direction"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from MoveMesh">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **MoveMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
