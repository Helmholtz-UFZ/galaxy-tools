<tool name="OGS: RemoveGhostData" id="ogs_removeghostdata" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'RemoveGhostData'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[RemoveGhostData --version]]></version_command>
  <command><![CDATA[RemoveGhostData
    #for $f in $input:
        --input '$f'
    #end for
    --output output_1.vtu]]></command>
  <inputs>
    <param name="input" type="data" optional="false" label="input" help="Input (.pvtu). The partitioned input mesh file" format="pvtu" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from RemoveGhostData">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **RemoveGhostData** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
