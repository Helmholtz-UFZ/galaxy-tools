<tool name="OGS: ReorderMesh" id="ogs_reordermesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'ReorderMesh'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[ReorderMesh --version]]></version_command>
  <command><![CDATA[ReorderMesh
    #for $f in $input:
        --input '$f'
    #end for
    --output output_1.vtu]]></command>
  <inputs>
    <param name="input" type="data" optional="false" label="input" help="name of the input mesh file, " format="vtu" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from ReorderMesh">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **ReorderMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
