<tool name="OGS: TecPlotTools" id="ogs_tecplottools" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'TecPlotTools'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[TecPlotTools --version]]></version_command>
  <command><![CDATA[TecPlotTools
    $split
    $convert
    #for $f in $input_file:
        --input-file '$f'
    #end for
    --output-file output_1.vtu]]></command>
  <inputs>
    <param name="split" type="boolean" label="split" help="split time steps into separate files" checked="false" truevalue="--split" falsevalue=""/>
    <param name="convert" type="boolean" label="convert" help="convert TecPlot data into OGS meshes" checked="false" truevalue="--convert" falsevalue=""/>
    <param name="input_file" type="data" optional="false" label="input file" help="TecPlot input file (format = *.plt)" format="plt" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from TecPlotTools">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **TecPlotTools** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
