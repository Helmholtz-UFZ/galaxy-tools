<tool name="OGS: createRaster" id="ogs_createraster" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'createRaster'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[createRaster --version]]></version_command>
  <command><![CDATA[createRaster
    --n_rows '$n_rows'
    --n_cols '$n_cols'
    --cell_size '$cell_size'
    --ll_y '$ll_y'
    --ll_x '$ll_x'
    --output output_1.asc]]></command>
  <inputs>
    <param name="n_rows" type="integer" value="1000" optional="false" label="n rows" help="number of rows" min="0"/>
    <param name="n_cols" type="integer" value="1000" optional="false" label="n cols" help="number of columns" min="0"/>
    <param name="cell_size" type="float" value="false" optional="false" label="cell size" help="cell size, " min="0"/>
    <param name="ll_y" type="float" value="0" optional="false" label="ll y" help="y coordinate of lower left point of axis aligned rectangular region"/>
    <param name="ll_x" type="float" value="0" optional="false" label="ll x" help="x coordinate of lower left point of axis aligned rectangular region"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from createRaster">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **createRaster** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
