<tool name="OGS: ipDataToPointCloud" id="ogs_ipdatatopointcloud" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'ipDataToPointCloud'.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[ipDataToPointCloud --version]]></version_command>
  <command><![CDATA[ipDataToPointCloud
    #for $f in $input_file:
        --input-file '$f'
    #end for
    --output-file output_1.vtu]]></command>
  <inputs>
    <param name="input_file" type="data" optional="false" label="input file" help="the input mesh " format="vtu" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from ipDataToPointCloud">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **ipDataToPointCloud** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
