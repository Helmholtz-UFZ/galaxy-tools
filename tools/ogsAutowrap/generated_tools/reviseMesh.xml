<tool name="OGS: reviseMesh" id="ogs_revisemesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'reviseMesh'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[reviseMesh --version]]></version_command>
  <command><![CDATA[reviseMesh
    --min-ele-dim '$min_ele_dim'
    --eps '$eps'
    #for $f in $input_mesh_file:
        --input-mesh-file '$f'
    #end for
    --output-mesh-file output_1.vtu]]></command>
  <inputs>
    <param name="min_ele_dim" type="text" value="1" optional="false" label="min ele dim" help="Minimum dimension of elements to be inserted into new mesh"/>
    <param name="eps" type="float" value="2.220446049250313e-16" optional="false" label="eps" help="Minimum distance for nodes not to be collapsed"/>
    <param name="input_mesh_file" type="data" optional="false" label="input mesh file" help="Input (.vtu) mesh file" format="vtu" multiple="false"/>
  </inputs>
  <outputs>
    <collection name="tool_outputs" type="list" label="Outputs from reviseMesh">
      <discover_datasets pattern="output_.+\..+" format="auto" visible="true"/>
    </collection>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **reviseMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
