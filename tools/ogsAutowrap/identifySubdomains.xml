<tool name="OGS: identifySubdomains" id="ogs_identifysubdomains" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'identifySubdomains'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[identifySubdomains --version]]></version_command>
  <command><![CDATA[identifySubdomains
    $force
    #if str($output_prefix):
        --output_prefix '$output_prefix'
    #end if
    #if str($searchlength):
        --searchlength '$searchlength'
    #end if
    --mesh '$mesh'
    '$subdomain_meshes_filenames']]></command>
  <inputs>
    <param name="force" type="boolean" label="force" help="Overwriting existing subdomain meshes." checked="false" truevalue="--force" falsevalue=""/>
    <param name="output_prefix" type="text" optional="true" label="output prefix" help="Prefix the subdomain meshes' filenames with the output prefix/path."/>
    <param name="searchlength" type="float" value="1e-16" optional="true" label="searchlength" help="search length determining radius for the node search algorithm. Non-negative floating point number (default 1e-16)"/>
    <param name="mesh" type="text" optional="false" label="mesh" help="the file the bulk mesh"/>
    <param name="subdomain_meshes_filenames" type="text" value="subdomain mesh file" optional="false" label="subdomain meshes filenames" help="mesh file names."/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="identifysubdomains_test"/>
  </tests>
  <help><![CDATA[This tool runs the **identifySubdomains** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
