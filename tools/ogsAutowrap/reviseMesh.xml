<tool name="OGS: reviseMesh" id="ogs_revisemesh" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'reviseMesh'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[reviseMesh --version]]></version_command>
  <command><![CDATA[reviseMesh
    #if str($min_ele_dim):
        --min-ele-dim '$min_ele_dim'
    #end if
    #if str($eps):
        --eps '$eps'
    #end if
    --output-mesh-file '$output_mesh_file'
    --input-mesh-file '$input_mesh_file']]></command>
  <inputs>
    <param name="min_ele_dim" type="text" value="1" optional="true" label="min ele dim" help="Minimum dimension of elements to be inserted into new mesh"/>
    <param name="eps" type="float" value="2.220446049250313e-16" optional="true" label="eps" help="Minimum distance for nodes not to be collapsed"/>
    <param name="output_mesh_file" type="text" optional="false" label="output mesh file" help="output mesh file"/>
    <param name="input_mesh_file" type="text" optional="false" label="input mesh file" help="input mesh file"/>
  </inputs>
  <outputs/>
  <tests>
    <expand macro="revisemesh_test"/>
  </tests>
  <help><![CDATA[This tool runs the **reviseMesh** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
