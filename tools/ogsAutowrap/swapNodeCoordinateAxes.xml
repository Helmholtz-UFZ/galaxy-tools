<tool name="OGS: swapNodeCoordinateAxes" id="ogs_swapnodecoordinateaxes" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="22.01">
  <description>Galaxy wrapper for the OGS utility 'swapNodeCoordinateAxes'.</description>
  <macros>
    <import>macros.xml</import>
    <import>test_macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command><![CDATA[swapNodeCoordinateAxes --version]]></version_command>
  <command><![CDATA[swapNodeCoordinateAxes
    --input-mesh-file '$input_mesh_file'
    --new-order '$new_order'
    --output-mesh-file output_1.vtu]]></command>
  <inputs>
    <param name="input_mesh_file" type="data" optional="false" label="input mesh file" help="Input (.vtu) mesh file" format="vtu" multiple="false"/>
    <param name="new_order" type="text" optional="false" label="new order" help="the new order of swapped coordinate values (e.g. 'xzy' for converting XYZ values to XZY values)"/>
  </inputs>
  <outputs>
    <data name="output_swapNodeCoordinateAxes" format="vtu" label="Output file from swapNodeCoordinateAxes" from_work_dir="output_1.vtu" hidden="false"/>
  </outputs>
  <tests>
    <expand macro="ogsutilssuite_tests"/>
  </tests>
  <help><![CDATA[This tool runs the **swapNodeCoordinateAxes** utility from the OpenGeoSys suite.]]></help>
  <expand macro="citations"/>
</tool>
