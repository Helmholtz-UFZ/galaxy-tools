<tool id="omero_import" name="OMERO import" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="20.01" license="MIT">
    <description></description>
    <macros>
        <token name="@TOOL_VERSION@">5.18.0</token>
        <token name="@VERSION_SUFFIX@">0</token>
    </macros>
    <xrefs>
        <xref type="bio.tools">omero</xref>
    </xrefs>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">omero-py</requirement>
        <requirement type="package" version="21.0.2">openjdk</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        mkdir folder &&
        #for $image in $folder:
            ln -s '$image' folder/'$image.element_identifier'.$image.ext &&
        #end for

        omero import folder
            -s $omero_host
            -p $omero_port
            -u $__user__.extra_preferences.get('omero_account|username', "root")
            -w $__user__.extra_preferences.get('omero_account|password', "omero") 
        > $log
    ]]></command>
    <inputs>
        <param name="omero_host" type="text" label="OMERO host URL">
            <validator type="regex" message="Enter a valid host location, for example, your.omero.server">^[a-zA-Z0-9._-]*$</validator>
            <validator type="expression" message="No two dots (..) allowed">'..' not in value</validator>
        </param>
        <param name="omero_port" type="integer" value="4064" optional="false" label="OMERO host URL"/>
        <param name="folder" type="data" format="bmp" multiple="true" optional="false" label="Images"/>
        <param name="username" type="hidden" value=""/>
        <param name="password" type="hidden" value=""/>
    </inputs>
    <outputs>
        <data name="log" format="txt"/>
    </outputs>
    <tests>
        <test>
            <param name="omero_host" value="host.docker.internal"/>
            <param name="omero_port" value="6064"/>
            <param name="folder" value="a1.bmp,b1.bmp"/>
            <param name="username" value="root"/>
            <param name="password" value="omero"/>
            <output name="log">
                <assert_contents>
                    <has_n_lines n="2"/>
                </assert_contents>
            </output>
            <assert_stderr>
                <has_text_matching expression="IMPORT_DONE.*a1.bmp.bmp"/>
                <has_text_matching expression="IMPORT_DONE.*b1.bmp.bmp"/>
                <has_text text="files uploaded, 2 filesets created, 2 images imported, 0 errors"/>
            </assert_stderr>
        </test>
        <!-- Hint: You can use [ctrl+alt+t] after defining the inputs/outputs to auto-scaffold some basic test cases. -->
    </tests>
    <help><![CDATA[

**What it does**

Imports images to an OMERO server

**Input**

Images

**Output**

A log file

    ]]></help>
    <citations>
        <citation type="doi">10.1038/nmeth.1896</citation>
    </citations>
</tool>
