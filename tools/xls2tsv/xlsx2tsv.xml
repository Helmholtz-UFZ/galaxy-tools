<tool id="xlsx2tsv" name="Excel to Tabular" version="0.1.0+galaxy0" license="MIT" profile = "23.0">
    <description>with pandas</description>
    <requirements>
        <requirement type="package" version="2.2.1">pandas</requirement>
        <requirement type="package" version="3.1.5">openpyxl</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
    mkdir output;
    python '$__tool_directory__/xlsx2tsv.py'
    --input-file '$input_file'
    #if $sheet_selection.input_sheet == "Yes"
    --sheet_selection '$sheet_selection.sheet_id'
    #end if
    --out_dir ./output/
    ]]></command>
    <inputs>
        <param name="input_file" type="data" format="excel.xls,xlsx" optional="false" label="Input excel file" help="Input XLS/XLSX file"/>
        <conditional name ="sheet_selection">
            <param name="input_sheet" type="select" label="Do you want to extract a specific sheet?">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </param>
            <when value="Yes">
                <param argument="sheet_id" type="text" value="" label="Please, input the name of the sheet to extract"/>
            </when>
            <when value="No"/>
        </conditional>
    </inputs>
    <outputs>
        <collection name="split_output" type="list">
            <discover_datasets pattern="__name_and_ext__" directory="output"/>
        </collection>
    </outputs>
    <tests>
        <test>
            <param name="input_file" value="excel_test.xlsx"/>
            <conditional name="sheet_selection">
                <param name="input_sheet" value="Yes"/>
                <param name="sheet_id" value="Sheet1"/>
            </conditional>
            <output_collection name="split_output" type="list" count="1">
            <element name="Sheet1">
                    <assert_contents>
                        <has_text text="column0"/>
                        <has_n_columns n="2"/>
                    </assert_contents>
            </element>
            </output_collection>
        </test>
        <test>
            <param name="input_file" value="excel_test.xlsx"/>
            <conditional name="sheet_selection">
                <param name="input_sheet" value="No"/>
            </conditional>
            <output_collection name="split_output" type="list" count="2">
            <element name="Sheet1">
                    <assert_contents>
                        <has_text text="column0"/>
                        <has_n_columns n="2"/>
                    </assert_contents>
            </element>
                <element name="Sheet2">
                    <assert_contents>
                        <has_text text="column2"/>
                        <has_n_columns n="2"/>
                    </assert_contents>
            </element>
            </output_collection>
        </test>
    </tests>
    <help>
Description
-----------
Extract a sheet from XLS/XLSX file to a tabular file.

    </help>
    <citations>
        <citation type="doi">10.5281/zenodo.13819579</citation>
    </citations>
</tool>